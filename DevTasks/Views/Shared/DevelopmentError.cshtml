@page
@model ErrorViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <h1>An error occurred</h1>
    <p>
        <strong>Error Message:</strong> @Model.ErrorMessage
    </p>
    <p>
        <strong>Stack Trace:</strong>
        <pre>@Model.StackTrace</pre>
    </p>
</body>
</html>
